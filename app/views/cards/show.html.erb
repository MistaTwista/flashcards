<h1><%= t( "cards.#{params[:action]}.h1", card_name: @card.original_text ) %></h1>
<p><%= t "cards.original" %>: <%= @card.original_text %></p>
<p><%= t "cards.translated" %>: <%= @card.translated_text %></p>
<p><%= image_tag @card.picture.url(:medium) %></p>
<% unless @card.deck.nil? %>
  <p><%= t "cards.deck" %>: <%= @card.deck.name %></p>
<% end %>
<p><%= t "cards.review_date" %>: <%= @card.review_date.strftime("%d/%m/%Y") %></p>
<p><%= link_to t( 'menu.edit_card' ), edit_card_path, class: "btn btn-default" %></p>
