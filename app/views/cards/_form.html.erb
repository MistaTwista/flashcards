<%= simple_form_for card, html: { class: 'card_form' } do |f| %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.input :deck_id,
              collection: current_user.decks,
              as: :radio_buttons,
              checked: current_user.current_deck.id unless current_user.current_deck.nil? %>
  <div class="form-group string required card_translated_text">
    <label class="string required control-label" for="card_new_deck_name">
      <%= t("simple_form.labels.card.new_deck") %>
    </label>
    <%= text_field_tag 'new_deck_name', nil, class: "string required form-control" %>
  </div>
  <%= f.input :picture, as: :file %>
  <%= f.button :submit %>
<% end %>
