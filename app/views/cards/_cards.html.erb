<div class="row">
<% cards.each do |card| %>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <span class="panel-title"><%= link_to card.original_text, card %></span>
        <span class="pull-right">#<%= card.id %></span>
        <%= link_to(card, method: :delete, data: { confirm: t('menu.confirm') }, title: t('menu.delete')) do %>
          <span class="glyphicon glyphicon-remove white close" aria-hidden="true"></span>
        <% end %>
        <%= link_to(edit_card_path(card), title: t('menu.edit')) do %>
          <span class="glyphicon glyphicon-edit white close" aria-hidden="true"></span>
        <% end %>
      </div>
      <div class="panel-body">
        <%= image_tag card.picture.url(:thumb) %>
        <%= card.translated_text %>
        <% if Rails.env.development? %>
          <p>id: <%= card.id %></p>
          <p>review_date: <%= card.review_date %></p>
          <p>error_counter: <%= card.error_counter %></p>
          <p>review_level: <%= card.review_level %></p>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= card.review_date.strftime("%d/%m/%Y") %>
        @ <%= card.deck.name %>
      </div>
    </div>
  </div>
<% end %>
</div>
